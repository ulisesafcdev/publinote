<%- include('inc/head') %>

<%- include('inc/main') %>

<main>
    <div class="uk-container uk-margin-auto uk-margin-large-top uk-margin-large-bottom">

        <!-- 
            EN ESTA VISTA SE MOSTRARAN COMPLETAMENTE TODOS LAS NOTAS CON TODOS SUS CAMPOS
                TITULO
                DESCRIPCION
                AUTHOR
                PARRAFO            
         -->

        <% allArticulos.forEach((el) => { %>

            <article class="uk-article">

                <h1 class="uk-article-title"><%= el.titulo %></h1>

                <p class="uk-article-meta">
                    Escrito por <a href="#" class="uk-button-text"><%= el.author %></a> / <%= el._id %>
                </p>

                <P class="uk-text-lead">
                    <%= el.descripcion %>
                </P>

                <p>
                    <%= el.parrafo %>
                </p>
                <hr>
                <div class="uk-grid-small uk-child-width-auto" uk-grid>
                    <div>
                        <span uk-icon="arrow-left"></span> <a href="/" class="uk-button uk-button-text">Ir a Inicio</a>    
                    </div>
                    <div>
                        <span uk-icon="bookmark"></span> <a href="/detalle/<%= el._id %>" class="uk-button uk-button-text">Ver Detalles</a>
                    </div>
                </div>

            </article>

        <% }) %>

    </div>
</main>

<%- include('inc/footer') %>